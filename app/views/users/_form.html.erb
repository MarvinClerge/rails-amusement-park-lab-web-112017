

<%= form_for @user do |f| %>

  <%= f.text_field :name, placeholder: "Name"%> <br>
  <%= f.password_field :password, placeholder: "Password" %><br>
  <%= f.password_field :password_confirmation, placeholder: "Confirm" %><br>
  <%= f.number_field :height, placeholder: "Height"%><br>
  <%= f.number_field :happiness, placeholder: "Mood"%><br>
  <%= f.number_field :nausea, placeholder: "Nausea"%><br>
  <%= f.number_field :tickets, placeholder: "Tickets"%><br>
  Check if you are a theme park owner: <%= f.check_box :admin %><br>
  <%= f.submit "Create User"%>
<% end %>
